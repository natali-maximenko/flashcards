<%= simple_form_for @card, html: {class: 'form-horizontal'} do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@card.errors.count, "error") %> prohibited
        this card from being saved:
      </h2>
      <ul>
        <% @card.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :original_text, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :translated_text, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :review_date %>
    <%= date_select :card, :review_date %>
  </div>

  <div class="actions form-group">
    <div class="col-sm-10">
      <%= f.button :submit, input_html: { class: 'btn btn-success' } %>
      <%= link_to 'Назад', cards_path, class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
