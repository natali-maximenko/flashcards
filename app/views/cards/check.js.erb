$('#flash').html('');
$('#flash').html("<h3><span><%= @msg %></span></h3>");
$('#flash span').addClass("label label-<%= @flash_type %>");
$('#user_text').val('');
$('#response_time').val(0);

<% if @next_card %>
  $('#translated_text').text("<%= @next_card.translated_text %>")
  $('#id').val("<%= @next_card.id %>");
  $('#card_image').attr('src', "<%= @next_card.picture.url(:thumb)%>");
<% end %>
