<h3>Listing cards</h3>

<table class="table table-striped">
  <thead>
    <tr>
    <th>original text</th>
    <th>translated text</th>
    <th>date</th>
    <th>picture</th>
    <th colspan="3">actions</th>
  </tr>
  </thead>
  <tbody>
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= formated_date(card.review_date) %></td>
      <td><%= image_tag card.picture.url(:thumb) %></td>
      <td>
        <%= link_to 'Show', [@pack, card] %>
        <%= link_to 'Edit', [:edit, @pack, card] %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<% content_for :sidebar do %>
  <div class="list-group">
    <%= link_to "Вернуться в колоду: #{@pack.name}", pack_path(@pack), class: 'list-group-item' %>
  </div>
<% end %>
