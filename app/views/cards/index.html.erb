<h1>Listing cards</h1>

<table class="table table-striped">
  <thead>
    <tr>
    <th>original text</th>
    <th>translated text</th>
    <th>date</th>
    <th>picture</th>
    <th colspan="3">actions</th>
  </tr>
  </thead>
  <tbody>
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= formated_date(card.review_date) %></td>
      <td><%= image_tag card.picture.url(:thumb) %></td>
      <td>
        <%= link_to 'Show', card_path(card) %>
        <%= link_to 'Edit', edit_card_path(card) %>
        <%= link_to 'Destroy', card_path(card),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
