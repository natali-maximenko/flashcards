<%= form_for @card, html: {class: 'form-horizontal'} do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@card.errors.count, "error") %> prohibited
        this card from being saved:
      </h2>
      <ul>
        <% @card.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :original_text %>
    <%= f.text_field :original_text, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :translated_text %>
    <%= f.text_field :translated_text, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :review_date %>
    <%= date_select :card, :review_date %>
  </div>

  <div class="actions form-group">
    <div class="col-sm-10">
      <%= f.submit class: 'btn btn-success' %>
      <%= link_to 'Назад', cards_path, class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
