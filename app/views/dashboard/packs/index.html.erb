<h1><%= t '.header' %></h1>

<table class="table table-striped">
  <thead>
    <tr>
    <th><%= t '.name' %></th>
    <th><%= t '.cards' %></th>
    <th colspan="3"><%= t 'actions' %></th>
  </tr>
  </thead>
  <tbody>
  <% @packs.each do |pack| %>
    <tr>
      <td><%= pack.name %>
      <% if pack.id == current_user.current_pack_id %>
      (<%= t '.current' %>)
      <% end %>
      </td>
      <td><%= pack.cards.count %></td>
      <td>
        <%= link_to t('show'), pack_path(pack) %>
        <%= link_to t('edit'), edit_pack_path(pack) %>
        <%= link_to t('destroy'), pack_path(pack),
              method: :delete,
              data: { confirm: t('confirm') } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<% content_for :sidebar do %>
  <div class="list-group">
    <%= link_to t('.set_current'), current_path, class: 'list-group-item' %>
    <%= link_to t('.add_pack'), new_pack_path, class: 'list-group-item' %>
  </div>
<% end %>
