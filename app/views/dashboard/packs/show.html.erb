<h3><%= t '.header' %> <%= @pack.name %></h3>
<table class="table table-striped">
  <thead>
    <tr>
    <th><%= t '.card' %></th>
    <th colspan="3"><%= t 'actions' %></th>
  </tr>
  </thead>
  <tbody>
  <% @pack.cards.each do |card| %>
    <tr>
      <td><%= card.original_text %>-<%= card.translated_text %></td>
      <td>
        <%= link_to t('show'), [@pack, card] , class: 'show_card'%>
        <%= link_to t('destroy'), pack_card_path(@pack, card),
              method: :delete,
              data: { confirm: t('confirm') } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<% content_for :sidebar do %>
  <div class="list-group">
      <%= link_to t('.add_cards'), new_pack_card_path(@pack), class: 'list-group-item' %>
      <%= link_to t('.cards_list'), pack_cards_path(@pack), class: 'list-group-item' %>
  </div>
<% end %>

