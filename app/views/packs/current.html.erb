<div class="row">
  <div class="col-xs-6">
    <%= simple_form_for '', { url: current_pack_path, class: 'form-horizontal' } do |f| %>
      <div class="form-group">
        <%= f.input :pack_id, label: t('.pack'), collection: current_user.packs, prompt: t('select'), selected: @current, input_html: { class: 'form-control' } %>
      </div>
      <div class="actions form-group">
        <%= f.button :submit, t('save'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
