<h1>Мои колоды</h1>

<%= link_to 'Выбрать текущую колоду', current_path %>
<table class="table table-striped">
  <thead>
    <tr>
    <th>название</th>
    <th>карточек</th>
    <th colspan="3">actions</th>
  </tr>
  </thead>
  <tbody>
  <% @packs.each do |pack| %>
    <tr>
      <td><%= pack.name %>
      <% if pack.current %>
      (текущая)
      <% end %>
      </td>
      <td><%= pack.cards.count %></td>
      <td>
        <%= link_to 'Show', pack_path(pack) %>
        <%= link_to 'Edit', edit_pack_path(pack) %>
        <%= link_to 'Destroy', pack_path(pack),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
